                                            <!-- Status bar -->
                                            <RowDefinition Height="*" />
                                            <!-- Content -->
                                        </Grid.RowDefinitions>
                                        <!-- Status Bar -->
                                        <Border x:Name="border_install_state_wallpaper" Background="Brown"  Grid.Row="0" CornerRadius="10,10,10,10" Width="600">
